set nocompatible

execute pathogen#infect()

augroup VimrcAutocmds
  autocmd!
augroup END
command! -nargs=* Autocmd autocmd VimrcAutocmds <args>

set title
set number
set ruler
set wrap
set scrolloff=3

set ignorecase
set smartcase
set incsearch
set hlsearch

set ttyfast
set mouse=a
set ttymouse=xterm2

set clipboard=unnamed

" -- Beep
set visualbell
set noerrorbells

set backspace=indent,eol,start
set tabstop=2
set shiftwidth=2
set expandtab

set hidden

syntax enable
filetype on
filetype plugin on
filetype indent on

" -- Change cursor shape in insert mode

let &t_SI = "\<Esc>]1337;CursorShape=1\x7"
let &t_EI = "\<Esc>]1337;CursorShape=0\x7"

autocmd bufenter * if (winnr("$") == 1 && exists("b:NERDTree") && b:NERDTree.isTabTree()) | q | endif

" -- Set Theme

let g:airline_theme='dracula'
colorscheme dracula

" -- AirLine Settings

set noshowmode
set laststatus=2
set ttimeoutlen=10
let g:bufferline_echo = 0
let g:airline_powerline_fonts = 1

if !exists('g:airline_symbols')
  let g:airline_symbols = {}
endif

" -- Syntastic Settings

set statusline+=%#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*

let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0

let g:syntastic_error_symbol = 'âœ–ï¸Ž'
let g:syntastic_style_error_symbol = 'â–·'
let g:syntastic_warning_symbol = 'âš ï¸Ž'
let g:syntastic_style_warning_symbol = 'ðŸ’©'

highlight link SyntasticErrorSign SignColumn
highlight link SyntasticWarningSign SignColumn
highlight link SyntasticStyleErrorSign SignColumn
highlight link SyntasticStyleWarningSign SignColumn

let g:syntastic_ruby_checkers = ['mri']
let g:syntastic_javascript_checkers = ['eslint']

" -- Neocomplete Settings

let g:neocomplete#enable_at_startup = 1

" -- Gitgutter Settings

let g:gitgutter_sign_column_always = 1
" if Vim would get slower uncomment and decrease value below
" let g:gitgutter_max_signs = 500

" -- Keys Mapping

let mapleader = ","

nnoremap av :tabnew $MYVIMRC<CR>
nnoremap sv :source $MYVIMRC<CR>
nnoremap tn :tabnew<CR>
nnoremap tk :tabnext<CR>
nnoremap tj :tabprev<CR>
nnoremap th :tabfirst<CR>
nnoremap tl :tablast<CR>
nnoremap tc :tabclose<CR>
nnoremap <space>w <c-w>
nnoremap <leader>/ :noh<CR>
nnoremap <leader>g :grep -R  .<Left><Left>
nnoremap <leader>ga :grep -F '<C-r>=expand("<cword>")<cr>' **/*
nnoremap <space>p :CtrlP<CR>
nnoremap <space><space> :LustyBufferExplorer<CR>
map <leader>n :NERDTreeToggle<CR>
map <c-a> :mksession! ./.session.vim<CR>
map <c-l> :source ./.session.vim<CR>
